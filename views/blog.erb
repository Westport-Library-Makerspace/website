<header class="header-image-2">
  <div class="headline">
    <div class="container">
      <h2><i class="fa fa-wrench"></i> What Are We Making?</h2>




    </div>
  </div>
</header>

<div class="center">

  <%if session[:visited]%>
      <a id="newblogpost" href="/blog/new">New Post <i class="fa fa-plus"></i></a>
      <hr>
  <% end %>
</div>




<div class="container">
  <!--I removed .reverse_order, to see if that was doing anything-->
  <% @posts.each do |post| %>
      <% if post.draft != 1 || session[:id] != nil %>
<article class="row">
  <div class="col-lg-2 col-md-3 col-sm-3">
    <p class="clearfix">
      <span class="day"><%= post.date.strftime("%d") %></span><span class="month-year"><b><%= post.date.strftime("%^b") %></b><br><%= post.date.strftime("%Y") %></span>
    </p>
    <ul class="list-unstyled">


      <li><span class="blog-readable"><i class="fa fa-user"></i> By <%=@authors.first(:id => post.author).firstname %></span></li>

    </ul>
  </div>

  <div class="col-lg-10 col-md-9 col-sm-9">
    <h3><a href="/blog/v/<%= post.id%>"><%= post.title%></a>
      <% if post.draft == 1 %>
          <small>(Draft)</small>
      <% end %>
      <%if session[:visited]%>
          <%if @user.perm >= 2 || (@user.id == post.author && post.draft==1) %>

              <a type="submit" class="delete"><i class="fa fa-times fa-lg"></i></a>
              <a class="delete" href="/blog/edit/<%= post.id%>"><i class="fa fa-pencil fa-lg"></i></a>
          <%end%>
      <%end%>
    </h3>
    <hr>
    <div class="post-entry">
      <%= post.content%>
     </div>
  </div>

</article>
<%end%>
  <% end %>

</div>